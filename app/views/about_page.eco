<% translate = require 't7e' %>

<div class='secondary-header'>
  <h1>About</h1>
</div>

<div class='secondary-bg'>
  <div class='secondary-content'>
    <nav class='sub-nav-about'>
      <button name='science'><%- translate 'span', 'about.science.nav' %></button>
      <button name='organizations'><%- translate 'span', 'about.organizations.nav' %></button>
      <button name='team'><%- translate 'span', 'about.team.nav' %></button>
    </nav>
  </div>

  <div class='secondary-content'>
    <div class='left-column'>
      <div class='content sub-nav-about-science'>
        <%- translate 'h1', 'about.science.header' %>
        <%- translate 'about.science.p' %>
        <%- translate 'about.science.questions' %>
      </div>

      <div class='content sub-nav-about-organizations'>
        <%- translate 'h1', 'about.organizations.header' %>

        <%- translate 'h2', 'about.organizations.adler.header' %>
        <%- translate 'p', 'about.organizations.adler.p' %>

        <%- translate 'h2', 'about.organizations.lincolnParkZoo.header' %>
        <%- translate 'p', 'about.organizations.lincolnParkZoo.p' %>
      </div>

      <div class='content sub-nav-about-team'>
        <%- translate 'h1', 'about.team.header' %>
      </div>
    </div>

    <div class='right-column'>
      <div class='content'>
        <%- translate 'h1', 'about.connect.header' %>
        <a href='#/classify'><%- translate 'button', 'about.connect.action' %></a>
        <%- translate 'p', 'about.connect.social' %>
      </div>
    </div>
  </div>
</div>
