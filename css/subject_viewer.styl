.subject-viewer
  display: inline-block;
  position: relative;
  float: left;
  -webkit-tap-highlight-color: transparent;

  &:focus
    outline: 0;

  .images
    position: relative;

    .subject-image
      box-sizing: border-box;
      left: 0;
      margin: 0;
      padding: 5px;
      overflow: hidden;
      top: 0;
      width: unit($subject-width, 'px');
      min-height: unit($subject-height + 10, 'px');
      @media $phone-or-smaller
        min-height: 0;

      img
        display: block;
        width: 100%;

    .annotations
      color: $white;
      font-size: 12px;
      font-weight: 300;
      position: absolute;
      width: unit($subject-width, 'px')
      left: 10px;
      z-index: 1;
      height: 42px;
      overflow: scroll;
      @media $classifier-vertical-stack-breakpoint
        width: 100%
        left: 0px;

      .annotation-item
        transition: background 0.2s;
        border-radius: 20px;
        display: inline-block;
        float: left;
        margin: 2px;
        background: $medium-blue;
        padding: 1px 5px 1px 10px;

        &.new
          background: $gold;

        &:hover
          transition: none;
          background: $red;
          cursor: default;

        button[name="delete"]
          border-radius: 50%;
          height: 1em;
          line-height: 1em;
          text-align: center;
          width: 1em;
          &:hover
            cursor: pointer;

    .sign-in,
    .favorite
      background: $light-blue;
      color: $red;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      transition: padding 0.25s ease-out;
      z-index: 1;

      > button
        position: relative;
        z-index: 1;

    .favorite
      font-size: 16px;
      padding: 5px 5px 0;
      right: 20px;
      top: -3px;

      &:hover
        padding-top: 10px;

      &:before,
      &:after
        border: 15px solid transparent;
        content: "";
        position: absolute;
        bottom: -15px;

      &:before
        border-left-color: $light-blue;
        left: 0;

      &:after
        border-right-color: $light-blue;
        right: 0;

      button[name="favorite"]
        &:not(:active)
          transform scale(1.0)
          transition 0.5s transform
        &:active
          transform scale(1.3)
        &.favorited
          svg
            path
              fill $red
  .controls,
  .followup
    font-size: 14px;
    margin: 0;
    margin-right: 0px;
    left: 414px;
    top: 18px
    position: relative;
    z-index: 1;
    text-align: right;

    @media $classifier-vertical-stack-breakpoint
      left: auto;
      width: auto;
      right: 0%;
      top: 485px;
      margin-right: 5px;

    @media $classifier-full-width-breakpoint
      padding: 5px;

  .controls
    .finished
      float: right;

      .nothing-label
        cursor: pointer;
        display: none;
        font-size: 12px;
        font-weight: bold;
        color: $dark-grey-font;
        margin-right: 10px;

      button
        @extend .classifier-action-button

  .followup
    display: none;

    button[name="not-done"]
      background: rgba($black, 0.5);
      border-radius: 15px;
      color: $white;
      font-size: 10px;
      margin-right: 10px;
      padding: 0 10px;
      text-shadow: none;

    .group
      display: inline-block;
      position: relative;
      float: right;
      margin-left: 5px;

      a,
      button
        @extend #standard-button;
        padding-left: 32px;
        padding-right 10px;
        color: $dark-grey-font;
        background: $light-grey-bg;
        font-size: 12px;
        line-height: 25px;
        height: 30px;
        border-radius: 4px;
        i
          left: 0;
          height: 25px;
          line-height: 25px;
          position: absolute;
          top: 3px;
          width: 30px;
      &.social
        i
          width: 100%;

      button[name="next"]
        color: $white;
        background: $medium-blue
        padding: 3px 10px 3px 32px;
        text-transform: uppercase;
        letter-spacing: 1px;
        &:active
          background: lighten($medium-blue, 5%);

  &.zoomed .images figure
    cursor: -moz-grab;

    img
      position: absolute;
      width: 1200px;

  &.dragging .images figure
    cursor: -moz-grabbing;

  &.no-annotations .controls .finished .nothing-label
    display: inline-block;

  &.finished
    .controls
      display: none;

    .followup
      display: block;

.signed-in .subject-viewer .images
  .favorite
    display: inline;
