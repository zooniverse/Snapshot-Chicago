body.dark-mode
  DARKEST = #020202
  DARKER = #101010
  DARK = #1e1e1e
  DARK_MODE_FONT_COLOR = #FFF

  background-color: DARKER;

  nav
    background-color: DARK;
    #site-title
      span
        &:nth-child(1)
          color: DARK_MODE_FONT_COLOR
        &:nth-child(2)
          color: $light-blue

  .home-page
    .home-section.right, .home-pre-footer
      background-color: DARKER;
    .snapshot-chicago-stats
      background-color: DARK;
      background-image: url("./images/dark-stats-skyline.svg");
      color: DARK_MODE_FONT_COLOR;
    .home-section.left
      -webkit-filter: grayscale(100%);

  .site-footer
    background-color: DARKEST;

  .classifier
    background-color: DARK;
    box-shadow: none;

    .classifier-help-link
      border-color: DARK
      .classifier-help-icon
        background: DARK

    .subject-viewer
      .followup
       span.group a
         background: DARKER;
         &:hover
           background: DARKEST;
    .animal-selector
      background-color: DARK;
      .selection-area .items [data-animal]
        color: DARK_MODE_FONT_COLOR;
      .animal-details
        background: DARK;
        box-shadow: none;
        .image-changer .images
          border-bottom: none;
        .content button
          background: transparent;
          border: 1px solid DARKEST;
        .count, .behavior
          .label
            background: transparent;
            border: 1px solid DARKEST;
      .characteristic-filters button
        background: darken($medium-blue, 40%)
        color: #fff;
      .like.filter-menu
        color: DARK_MODE_FONT_COLOR;
        box-shadow: none;
        button
          background: DARK;
          &:hover
            box-shadow: none;
        &.open
          button[name='characteristic-value']
            &:hover
              background: $medium-blue;
      .menu
        background: DARKER;
        button
          border-color: DARK;
          background-color: DARKEST;
      input
        background-color: DARK;
        color: DARK_MODE_FONT_COLOR;

  .secondary-bg
    background: DARK;
    .secondary-content h1
      color: DARK_MODE_FONT_COLOR;

  .profile
    .zooniverse-profile
      background: DARK;
      .sign-in-form input
        background: DARK;
        color: DARK_MODE_FONT_COLOR;
    nav
      button[name='turn-page']:not(.active)
        background: DARK;

  #notifier
    color: DARK_MODE_FONT_COLOR;
    background-color: DARKER !important; // override jQuerys inline styles
    border-top: 2px solid DARKEST;

  .tutorial.zootorial-dialog
    background: DARKER;
    color: DARK_MODE_FONT_COLOR;
    &.arrow.right:after
      border-left-color: DARKER;
    &.arrow.left:after
      border-right-color: DARKER;
    &.arrow.up:after
      border-bottom-color: DARKER;
    &.arrow.down:after
      border-top-color: DARKER;

  #small-tutorial
    background-color: rgba(0,0,0, 0.9);
    .tutorial-slide
      color: DARK_MODE_FONT_COLOR;
      background-color: DARK;

  @media $phone-or-smaller
    .zooniverse-top-bar
      background: DARK;
      color: $red;
    nav li a
      &:hover, &.active
        background-color: $medium-blue
        border-color: $medium-blue
        color: $white;